extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/api/v1/contact")
            div(class="top-bar-icon-lang")
            div(class="top-bar-icon")
            div(class="top-bar")
            div(class="div-input")
                #error
                if error
                    p.text-danger Zip code is not found!
                input(type="number" class="input" name="zipCode" id="input"  placeholder="Zip code" required autofocus)
            input(type="image" src="../public/stylesheets/images/button.png" alt="Submit" class="button")
            div(class="middle-bar")
            div(class="body-shade1")
            div(class="body-shade2")   
            
