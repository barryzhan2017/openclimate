extends layout

block content
    
    div.page-wrapper.page-inner
        div.container
            nav.navbar.navbar-expand-lg.navbar-light.navbar-inner
                a(class="navbar-brand" href="#") 
                    img(src="public/images/logo-inv.png")
                button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                div.collapse.navbar-collapse#navbarSupportedContent
                    ul.navbar-nav.mr-auto
                      li.nav-item
                        a(class="nav-link" href="#") About
                      li.nav-item
                        a(class="nav-link" href="#") Submit bug
                      li.nav-item
                        a(class="nav-link" href="#") Q&A
                      li.nav-item
                        a(class="nav-link" href="#") Contact
                    form(class="form-signin form-inline my-2 my-lg-0" method="POST" action="/api/v1/contact")
                        div(class="div-input")
                            #error
                            if error
                                p.text-danger Zip code is not found!
                            input(type="number" class="input" name="zipCode" id="input"  placeholder="Enter your zip code" required autofocus)
                        div(class="top-bar-icon-country dropdown")           
                            button(class="dropdown-toggle" type="button" data-toggle="dropdown")
                                img(src="public/images/flag-us.png")
                                span.caret
                                ul.dropdown-menu
                                    li
                                        a(href="#") 
                                            img(src="public/images/flag-us.png")
                        div(class="top-bar-icon-lang dropdown")         
                            button(class="dropdown-toggle" type="button" data-toggle="dropdown") ENG
                                span.caret
                                ul.dropdown-menu
                                    li
                                        a(href="#") ENG 

            div.main-wrapper
            each contact in data
                div.row.row-top
                    div.col-lg-5
                      h4 NORTH AMERICA
                      h2 #{contact['city']},
                        span #{contact['state']} #{contact['zipCode']}  
                      p
                        span 80% reduction
                        |  in GHGs
                        span  by 2030
                        |  from 2000
                    div.col-lg-7
                      div.progress
                        div(class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100") 25%
                        h6 
                          strong 75% 
                          | away from target
                div.row.row-main
                    div.col-lg-3.side-img-wrapper
                      div.side-img
                        img(src="public/images/side-placeholder.jpg")
                    div.col-lg-9
                      div.results-list
                        div.row
                          div.col-lg-6
                            div.col-item
                              div.item-img
                                img(src="public/images/placeholder.png")
                              div.item-data
                                h5 Congressional District: #{contact['congressionalDistrict']}
                                h4 #{contact['repName']}
                                p Year Elected: #{contact['repYearElected']}
                                p Next Election: #{contact['repNextElection']}
                                p Email Address: #{contact['repEmailAddress']}
                                p Online Msg: #{contact['repOnlineMessgae']}
                                p Party: #{contact['repParty']}
                                p Committee Assignment: #{contact['repCommitteeAssignment']}
                                p Address: #{contact['repAddress']}
                                p Office: #{contact['repOfficeRoom']}
                                p Twitter: #{contact['repTwitter']}
                                p Phone: #{contact['repPhone']}
