extends layout

block content
    include inner
    div.page-wrapper.page-inner
        div.container
            div.main-wrapper
                div.row.row-top
                    div.col-lg-6
                      h4 NORTH AMERICA
                      each contact in data
                       h2 #{contact['city']},
                         span #{contact.stateAcronym} 
                         |  #{contact.zipCode}
                       p= contact.mayorGHGTarget
                       - break
                    div.col-lg-6
                      div.progress
                        div(class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100") 25%
                        h6 
                          strong 75% 
                          | away from target
                div.row.row-main
                    div.col-lg-3.side-img-wrapper
                      div.side-img
                        img(src="../../public/images/side-placeholder.jpg")
                    div.col-lg-9
                      div.results-list
                        div.row
                         each contact in data
                          div.col-lg-6
                            div.col-item
                              div.item-img
                                if contact.repPicture
                                  img(src='../../public/images/'+`${contact.repPicture}`+'.jpg')
                                else
                                  img(src="../../public/images/placeholder-rep.png")
                              div.item-data
                                h5 Rep.
                                 = `${contact.city}.${contact.stateAcronym}`
                                h4= contact.repName
                                p Congressional District: 
                                 =  contact.congressionalDistrict
                                p Year Elected: 
                                 =  contact.repYearElected
                                p Next Election: 
                                 =  contact.repNextElection
                                p Party: 
                                 =  contact.repParty
                                p Committee Assignment: 
                                 =  contact.repCommitteeAssignment
                                p Office Room: 
                                 =  contact.repOfficeRoom
                                p Address: 
                                 =  contact.repAddress
                                p Email:
                                 a(href= '//'+`${contact.repEmailAddress}`)
                                   =  contact.repEmailAddress
                                p Online Message: 
                                 a(href= '//'+`${contact.repOnlineMessaging}`)
                                  =  contact.repOnlineMessaging
                                p Twitter: 
                                 a(href= '//'+`${contact.prepTwitter}`)
                                  =  contact.prepTwitter
                                p Phone: 
                                 a(href= 'tel:'+`${contact.repPhone}`)
                                  =  contact.repPhone
                         each contact in data
                          div.col-lg-6
                            div.col-item
                              div.item-img
                                if contact.senator1Picture
                                  img(src='../../public/images/'+`${contact.senator1Picture}`+'.jpg')
                                else
                                  img(src="../../public/images/placeholder-rep.png")
