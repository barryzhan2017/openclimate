                                p Committee Assignment: 
                                 =  contact.senator1CommitteeAssignment
                                p Address: 
                                 =  contact.senator1Address
                                p Email:
                                 a(href= '//'+`${contact.senator1EmailAddress}`)
                                  = contact.senator1EmailAddress
                                p Online Message: 
                                 a(href= '//'+`${contact.senator1OnlineMessaging}`)
                                  = contact.senator1OnlineMessaging
                                p Twitter: 
                                 a(href= '//'+`${contact.senator1Twitter}`)
                                  =  contact.senator1Twitter
                                p Phone:
                                 a(href= 'tel:'+`${contact.senator1Phone}`)
                                  =  contact.senator1Phone
                          div.col-lg-6
                            div.col-item
                              div.item-img
                                if contact.senator2Picture
                                  img(src='../../public/images/'+`${contact.senator2Picture}`+'.jpg')
                                else
                                  img(src="../../public/images/placeholder-rep.png")
